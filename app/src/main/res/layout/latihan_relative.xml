<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnsatu"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/btnsatu"
        android:id="@+id/btndua"
        android:layout_alignParentRight="true"
        android:text="2"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/btndua"
        android:id="@+id/btntiga"
        android:text="3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/btntiga"
        android:id="@+id/btnempat"
        android:text="4"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btntujuh"
        android:text="7"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_centerInParent="true"
        android:id="@+id/btnlima"
        android:text="5"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/btnlima"
        android:id="@+id/btnenam"
        android:layout_centerInParent="true"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/btnenam"
        android:id="@+id/btnsepuluh"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_alignTop="@+id/btnsepuluh"
        android:id="@+id/btnsembilan"
        android:layout_marginTop="200dp"
        android:text="9"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btndelapan"
        android:layout_alignParentRight="true"
        android:text="8"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>